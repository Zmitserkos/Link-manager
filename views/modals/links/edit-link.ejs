
<div id="editLinkModal" class="modal fade" tabindex="-1" ng-controller="editLinkController">
  <div class="modal-dialog modal-edit-link">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" type="button" data-dismiss="modal" ng-click="activate()">×</button>
        <span class="modal-title">Create short link</span>
      </div>

      <div class="modal-body">
        <form ng-submit="saveLink()">
          <p class="modal-input-title">INPUT LONG URL</p>
          <textarea class="modal-input-text long-url-modal" ng-model="link.longUrl"></textarea>

          <p class="modal-input-title">SHORT URL</p>
          <textarea class="modal-input-text short-url-modal" ng-model="link.shortUrl"></textarea>

          <div ng-show="true">
            <p class="modal-input-title">DESCRIPTION</p>
            <textarea class="modal-input-text description-modal" ng-model="link.description"></textarea>

            <div class="tags-container-modal">

              <p class="modal-input-title tag-title-modal">TAGS</p>
              <div class="modal-tag" ng-repeat="tag in link.tags" ng-show="showTagsList[$index]">
                <span>{{tag}}</span>
                <button class="modal-tag-del-btn" ng-click="delTag($index)">×</button>
              </div>

            </div>
            <input class="modal-input modal-tag-input" ng-model="tag"></input>
            <button class="modal-tag-btn" ng-click="addTag()">ADD</button>
          </div>

          <input type="submit" value="SAVE" class="modal-btn" />

        </form>
      </div>

    </div>
  </div>
</div>

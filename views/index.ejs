<html  id="ng-app" lang="en-US" ng-app="linkManagerApp">
<head>
  <title>Test task</title>

  <meta http-equiv="Content-Type" content="text/html" charset="utf-8">

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="css/bootstrap-grid-3.3.1.min.css"/>
  <!--<link rel="stylesheet" href="../public/css/bootstrap.min.css"/>-->
  <link rel="stylesheet" href="css/style.css"/>

</head>
<body>

  <div id="main" ng-controller="mainController" ng-class="linkManagerModel.deactivated ? 'disactivated' : ''">
    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-12 col-md-7 col-md-offset-1 col-lg-6 col-lg-offset-2">
          <div id="logo">Te.sT</div>
        </div>
        <div class="col-xs-12 col-md-3 col-lg-2 myColoredCol" >
          <div class="top-button-container">
            <button class="top-button login" ng-click="authorize(2)">Log in</button>
            <button class="top-button register" ng-click="authorize(1)">Register</button>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <div id="tagline">
            te.st - test task for <b>Instinctools</b>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-4 col-lg-offset-4">
          <div class="input-block">
            <input class='container-input' placeholder="SEARCH BY LINK" ng-model="linkManagerModel.currUrl">
            <button class='search-btn' ng-click="searchLink(linkManagerModel.currUrl)">SEARCH</button>
          </div>
        </div>
      </div>
    </div>

  </div>


  <script src="js/angular.min.js"></script>
  <script src="js/angular-animate.min.js"></script>

  <script src="modules/mainApp.js"></script>

  <script src="models/dataService.js"></script>

  <script src="controllers/mainController.js"></script>
  <script src="controllers/authorizationController.js"></script>
  <script src="controllers/editLinkController.js"></script>

</body>
</html>
